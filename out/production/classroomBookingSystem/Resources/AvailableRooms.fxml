<GridPane xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AvailableRoomsController">
   <children>
      <Text layoutX="219.0" layoutY="39.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Available Rooms" translateX="500">
         <font>
            <Font size="36.0" />
         </font>
      </Text>
      <HBox alignment="CENTER" prefHeight="800" prefWidth="2270" spacing="20.0" translateY="70">
         <children>
            <Button fx:id="Cancel"  onAction="#cancelroom"  text="Cancel Room Booking" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"/>
            <Button fx:id="Available" onAction="#AvailableRooms" text="Available Rooms" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"/>
            <Button fx:id="Book" onAction="#bookroom" text="Book Room" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"/>
            <Button fx:id="Request" onAction="#viewRequests" text="View Requests" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"/>
         </children>
      </HBox>
   </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
